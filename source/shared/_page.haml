%div{ class: "card card--#{status} mbm" }
  %h2= link_to page, link
  %p{ class: ('mbf' unless note) }
    %strong Status:
    - if status == 'success'
      %span.tsi= data.status.success_status
    - elsif status == 'warning'
      %span.tsi= data.status.warning_status
    - else
      %span.tsi= data.status.error_status
  - if note
    %p.mbf= note
