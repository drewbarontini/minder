!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    / Use title if it's in the page YAML frontmatter
    %title= data.status.title

    = stylesheet_link_tag 'application'

  %body{ class: page_classes }

    = partial "#{data.status.path}shared/header"

    .row
      .cell.well--l
        %main.content
          .grid
            .grid-box.grid-box--desk--1of4

              = partial "#{data.status.path}shared/nav"

            .grid-box.grid-box--desk--3of4

              %main.content= yield

