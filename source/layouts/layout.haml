!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0' }

    / Use title if it's in the page YAML frontmatter
    - if yield_content(:title)
      %title= "#{ yield_content(:title) } - #{data.config.title}"
    - else
      %title= data.config.title

    = stylesheet_link_tag 'application'

  %body{ class: page_classes }

    = partial "#{data.config.path}shared/header"

    .row
      .cell.well--l
        %main.content
          .g
            .g-b.g-b--m--1of4

              = partial "#{data.config.path}shared/nav"

            .g-b.g-b--m--3of4

              %main.content= yield

    = javascript_include_tag 'http://code.jquery.com/jquery-1.11.1.min.js'
    = javascript_include_tag 'application'

